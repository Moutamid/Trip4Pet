<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:text="Report Errors"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            android:visibility="gone"
            app:icon="@drawable/bug_solid"
            app:iconPadding="20dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:text="@string/add_a_review"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            app:icon="@drawable/star_regular"
            app:iconPadding="20dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imHere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:text="@string/i_m_here"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            app:icon="@drawable/location_crosshairs_solid"
            app:iconPadding="20dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:text="@string/add_a_photo"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            app:icon="@drawable/images_solid"
            app:iconPadding="20dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:text="@string/edit_this_place"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            app:icon="@drawable/pen_to_square_solid"
            app:iconPadding="20dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:visibility="gone"
            android:paddingStart="20dp"
            android:text="Share this place"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            app:icon="@drawable/share_solid"
            app:iconPadding="20dp"
            app:iconTint="@color/black" />


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>